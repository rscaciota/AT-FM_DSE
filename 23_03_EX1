/******************************************************************************
Exercício 1 
Peça ao usuário para digitar três valores inteiros e imprima a soma
deles.
*******************************************************************************/

//inserir bibliotecas que serao utilizadas pelo programa
#include <stdio.h>  //serve pra que eu possa utilizar as funçoes entrada e saida
                    //funçao de entrada ---> scanf
                    //funcao de saida   ---> printf
#include <stdlib.h> //apresentar as funçoes padrao da linguagem C so programa

//adicionar a lógica de programaçao para resolver o meu desafio
int main()
{
    //declarar todos os tipos de variáveis que serao utilizadas no programa
    int num1;
    int num2;
    int num3;
    int soma;
    //int num1, num2, num3, soma;
    
    printf("Digite o Primeiro Valor:\n");
    //funçao apresentar tela --> printf(" INFORMACAO PARA O USUARIO ")
    // o caracter \n é utilizar para pular a linha
    scanf("%i", &num1);
    //antes da virgula do scanf apresentar o tipo de dado
    //no caso deste exercício todos os dados serao inteiros (int - %i)
    //identificar valor add pelo usuario --> scanf("% + tipo de caracter", & + nome da variavel)
   
   printf("Digite o Segundo Valor:\n");
   scanf("%i", &num2);
   
   printf("Digite o Terceito Valor:\n");
   scanf("%i", &num3);
   
   //agora fazemos a soma de todos os números
   soma = num1+num2+num3;
   
   printf("O resultado da soma dos tres numeros é: %d", soma);
  
}
