/******************************************************************************
Calcule o fatorial de um número apresentado pelo usuário.
*******************************************************************************/

//número fatorial
//5! = 5*4*3*2*1 = 120

//fazendo este exercício utilizando o for

#include<stdlib.h>
#include<stdio.h>

int main(){
    int num;
    int fatorial = 1;
    int i=1;
    
    printf("Determine qual é o número que deve ser calculado o fatorial:\n");
    scanf("%d", &num);
    
    for(i; i<=num; i++){
        
        printf("Repetição nº: %d\n", i);
        fatorial = fatorial*i;
        printf("Multiplicaçao fatorial: %d\n", fatorial);
    }
    
    printf("O fatorial de %d é: %d", num, fatorial);
}
